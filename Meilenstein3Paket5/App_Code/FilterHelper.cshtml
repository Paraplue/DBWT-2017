@using MySql.Data.MySqlClient;
@using System.Configuration;



@helper FilterFormular(Dictionary<String,String> kategorieliste) {
// Die Hilfsmethode kann Code und/oder Markup enthalten, z. B.
// var msg = "Hallo " + name;
// <p>@msg</p>
// Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?LinkID=204658.

    

    <form method="get" action="~/Produkt/Index">
        <fieldset>
            <legend>Speisenliste filtern</legend>
            <div>
                <select name="kategorie">
                    @foreach(KeyValuePair<String,String> item in kategorieliste)
                    {
                        
                            <option value="@item.Key">@item.Value</option>

                    }
                </select>
            </div>
            <div>
                <input type="checkbox" name="verfugbar" id="verfugbar" value="1" /> 
                <label for="verfugbar">verfugbar</label>
            </div>
            <div>
                <input type="checkbox" name="vegetarisch" id="vegetar" value="1" /> 
                <label for="vegetar">vegetar</label>
            </div>
            <div>
                <input type="checkbox" name="vegan" id="vegan" value="1" /> 
                <label for="vegan">vegan</label>
            </div>
            <div>
                <label for="limit">limit: </label> 
                <input type="text" name="limit" id="limit" value="@( Request.Params["limit"] == null ? "8" : Request.Params["limit"].ToString())" />
            </div>
        </fieldset>
        <input type="submit" class="btn btn-default" value="Filtern" />
    </form>


}

