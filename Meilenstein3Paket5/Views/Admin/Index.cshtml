@model IEnumerable<Meilenstein3Paket5.Models.FE_Nutzer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<h3>Letzte Anmeldungen</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.loginname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vorname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Where(x => x.aktiv == true)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.loginname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vorname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.ActionLink("Deaktivieren", "Deactivate", new { id=item.ID })            
        </td>
    </tr>
}

</table>

<h3>Letzte Registrierungen</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.loginname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vorname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.aktiv == false))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.loginname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Activieren", "Activate", new { id = item.ID })
            </td>
        </tr>
    }

</table>
